@model MitProjectAssignment.Models.ForgetPassword
@{
    ViewBag.Title = "ForgetPassword";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <!-- important meta tage-->

    <meta charset="utf-8">
    <meta http-equiv="X-UA-compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1.0 ,user-scalable=no">
    <!--Title-->
    <title>
        Login
    </title>

    <!--fonts-->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans
         :wght@300;400;600;700&display=swap" rel="stylesheet">
    <!-- Google fonts-->
    <!-- Fontawesome-->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans
         :wght@300;400;600;700&display=swap" rel="stylesheet">
    <!-- Google fonts-->
    <!-- Fontawesome-->
    <link rel="stylesheet" href="~/css/font-awesome/css/font-awesome.min.css">


    <!-- bootstrap css-->
    <link rel="stylesheet" href="~/css/bootstrap/bootstrap.min.css">

    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>
    <section id="forgot-page">
        <div class="container">
            <div class="row">


                <div class="forgot-page-img text-center">
                    <img src="~/Images/pre-login/top-logo.png">
                </div>

                <div class="col-md-4 col-md-offset-4">

                    <div class="panel-01 panel-default">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="forgot-text text-center">
                                <h2>Forgot Password?</h2>
                                <p>Enter your email to reset your password</p>
                            </div>



                            <form>
                                <div class="form-group-forgot">

                                    <label for="exampleinputEmail1">Email</label>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    @Html.ValidationMessage("EmailNotExists", new { @class = "text-danger" })
                                </div>

                                <div class="forgot-page-last">
                                    <button type="submit" class="btn-forgot btn-primary">LOGIN</button>
                                </div>
                            </form>
                        }
                        </div>
                        
                </div>

            </div>
        </div>
    </section>




    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    <!--jquery -->
    <script src="~/js/jquery.js"></script>

    <!--Bootstrap js -->
    <script src="~/js/bootstrap/bootstrap.min.js"></script>

    <script src="~/js/jquery.validate.min.js"></script>

    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>

    <!--custom js-->
    <script src="~/js/script.js"></script>

</body>
</html>












