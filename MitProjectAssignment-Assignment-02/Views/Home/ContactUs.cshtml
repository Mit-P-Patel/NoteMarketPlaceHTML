



@model MitProjectAssignment.Models.ContactUsModel

@{
    Layout = null;
}


<div class="user-profile-image">

    <img src="~/Images/User-Profile/banner-with-overlay.jpg">
    <div class="user">
        <h2>Contact Us</h2>
    </div>
</div>


<div>

    @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken();

        <div class="contact-img">

            <div class="container">


                <div class="container">

                    <div class="contact-text-top">

                        <div class="row">

                            <div class="col-md-12">
                                <h3>Get in Touch</h3>
                                <p>Let us know how to get back to you</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">

                    <div class="con-form">
                        <div class="row">
                            
                                <div class="col-md-6">



                                    <div class="form-group-contact-01">
                                        <label class="control-label-user">Full Name *</label>
                                        @Html.TextBoxFor(x => x.FullName, htmlAttributes: new { @class = "form-control", @placeholder = "Enter your Full Name" })
                                        @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "text-danger" })
                                    </div>



                                    <div class="form-group-contact-02">
                                        <label class="control-label-user">Email Address *</label>
                                        @Html.TextBoxFor(x => x.EmailID, "", htmlAttributes: new { @class = "form-control", @placeholder = "Enter your Email Address" })
                                        @Html.ValidationMessageFor(x => x.EmailID, "", new { @class = "text-danger" })
                                    </div>



                                    <div class="form-group-contact-03">
                                        <label class="control-label-user">Subject *</label>
                                        @Html.TextBoxFor(x => x.Subject, "", htmlAttributes: new { @class = "form-control", @placeholder = "Enter your Subject" })
                                        @Html.ValidationMessageFor(x => x.Subject, "", new { @class = "text-danger" })
                                    </div>

                                </div>


                                <div class="col-md-6">

                                    <div class="form-group-contact-04">
                                        <label class="control-label-user">Comments / Questions *</label>
                                        @Html.TextAreaFor(x => x.Comments, htmlAttributes: new { @class = "form-control", rows = "8", @placeholder = "Comments....." })
                                        @Html.ValidationMessageFor(x => x.Comments, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                           

                        </div>

                    </div>







                </div>

                <div class="container">

                    <div class="row">

                        <button type="submit" class="btn-ctn btn-primary">SUBMIT</button>
                    </div>
                </div>
            </div>
        </div>
    }
    </div>